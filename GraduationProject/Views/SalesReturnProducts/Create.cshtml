@model GraduationProject.Models.Entities.SalesReturnProduct

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/AdminLTE/_Admin.cshtml";
}

<h1>Create</h1>

<hr />
<fieldset>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reason" class="control-label"></label>
                    <input asp-for="Reason" class="form-control" />
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SalesReturnId" class="control-label"></label>
                    <select asp-for="SalesReturnId" class ="form-control" asp-items="ViewBag.SalesReturnId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label"></label>
                    <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
                </div>           
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</fieldset>


<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
