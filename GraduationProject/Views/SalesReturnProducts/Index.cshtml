@model IEnumerable<GraduationProject.Models.Entities.SalesReturnProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/AdminLTE/_Admin.cshtml";
}

<h1>Products Return</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-secondary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr class="bg-secondary text-white" style=" font-family: Arial, Helvetica, sans-serif">
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesReturn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesReturn.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>        
            <td>
                <div>
                    <a class="btn btn-primary" style="margin-top: 10px; width: 125px;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </div>
                <div>
                    <a class="btn btn-info" style="margin-top: 10px; width: 125px;" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </div>
                <div>
                    <a class="btn btn-danger" style="margin-top: 10px; width: 125px;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>           
            </td>
        </tr>
}
    </tbody>
</table>
