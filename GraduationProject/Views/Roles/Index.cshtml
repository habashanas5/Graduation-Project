@model IEnumerable<IdentityRole>

@{
    Layout = "~/Pages/Shared/AdminLTE/_Admin.cshtml";
    ViewData["Title"] = "Add Role";
}

<h1>Roles</h1>

<partial name="_RoleForm" model="new AddRole()" />

<div style="margin-bottom:20px">
    <a href="http://localhost:5244/UserProfiles/UserList" class="btn btn-outline-secondary">Back to List</a>
</div>

<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-secondary text-white" style=" font-family: Arial, Helvetica, sans-serif">
            <th>Id</th>
            <th>Role Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id="@role.Id">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this role?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}