@page
@model ForgotPasswordConfirmation
@using GraduationProject.Applications.Companies
@inject CompanyService CompanyService

@{
    ViewData["Title"] = "Forgot password confirmation";
    var defaultCompany = await CompanyService.GetDefaultCompanyAsync();
    var companyName = defaultCompany?.Name ?? string.Empty;
}

<partial name="~/Areas/Identity/Pages/Account/_StatusMessage.cshtml" model=@ViewData["StatusMessage"] />
<div class="card-body register-card-body" style="text-align:center ; margin-bottom:500px;">
    <p class="login-box-msg">@ViewData["Title"]</p>
    <p class="text-danger">Please check your email to reset your password..</p>
    
    <p class="mb-1">
        <a asp-page="./Login" class="text-center">I already have a membership</a>
    </p>
    <p class="mb-1">
        <a asp-page="./ResendEmailConfirmation">Resend Confirmation</a>
    </p>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}